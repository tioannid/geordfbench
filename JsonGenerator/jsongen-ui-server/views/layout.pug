doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= locals.title || 'Please pass a title property'

    style 
      include ./assets/css/bootstrap.min.css
    script  
      include ./assets/js/bootstrap.min.js
  body
    block menu
      .header.p-3.text-bg-dark
        .container
          .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
            a(href="/").d-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none
              img.mt-2.mb-2(src="/static/geordfbench_image_favicon.png" alt="" width="40" height="40")
            ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
              li 
                a(href="#" class="nav-link px-2 text-secondary") Home
              li 
                a(href=`http://${locals.endpointConfig.HOSTNAME}:${locals.endpointConfig.PORT}/endpointui/` class="nav-link px-2 text-white") Endpoint-UI
              li 
                a(href=`http://${locals.endpointConfig.HOSTNAME}:${locals.endpointConfig.PORT}/api-docs/` class="nav-link px-2 text-white") OpenAPI Docs
              li 
                a(href="#" class="nav-link px-2 text-white") FAQs
              li 
                a(href="#" class="nav-link px-2 text-white") About

            form.col-12.col-lg-auto.mb-3.mb-lg-0.me-lg-3(role="search")
              input(type="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="Search")
            .text-end
              button(type="button" class="btn btn-outline-light me-2") Login
              button(type="button" class="btn btn-warning") Sign-up

    block content
      .container-fluid
