doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= locals.title || 'Please pass a title property'

    // ðŸ”¥ BEAST MODE Enhanced Styling
    style 
      include ./assets/css/bootstrap.min.css
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css")
    script  
      include ./assets/js/bootstrap.min.js
    
    // Custom BEAST MODE styles
    style.
      .section-header hr {
        height: 2px;
        opacity: 0.3;
      }
      .card {
        transition: all 0.3s ease;
      }
      .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
      }
      .btn {
        transition: all 0.2s ease;
      }
      .btn:hover {
        transform: translateY(-1px);
      }
      .progress-bar {
        transition: width 0.3s ease;
      }
      .table-hover tbody tr:hover {
        background-color: rgba(0,123,255,0.1);
      }
      .badge {
        font-size: 0.75em;
      }
      .form-control:focus, .form-select:focus {
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        border-color: #86b7fe;
      }
      .navbar-brand {
        font-weight: 600;
      }
      .dropdown-menu {
        border: none;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
      }
      .alert {
        border: none;
        border-radius: 8px;
      }
      .modal-content {
        border: none;
        border-radius: 12px;
        overflow: hidden;
      }
      .bg-gradient {
        background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-primary-dark, #0056b3) 100%) !important;
      }
      .bg-gradient.bg-danger {
        background: linear-gradient(135deg, var(--bs-danger) 0%, #c82333 100%) !important;
      }
      .bg-gradient.bg-success {
        background: linear-gradient(135deg, var(--bs-success) 0%, #1e7e34 100%) !important;
      }
      .bg-gradient.bg-info {
        background: linear-gradient(135deg, var(--bs-info) 0%, #138496 100%) !important;
      }
